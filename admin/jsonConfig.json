{
  "i18n": true,
  "type": "panel",
  "items": {
    "_manualDiscoverHint": {
      "type": "staticText",
      "newLine": true,
      "sm": 12,
      "text": "Enter Username and Password of onvif user of the camera. \nDiscovery happens automatically at adapter start or after settings save.",
      "style": {
        "paddingTop": 50,
        "fontWeight": "bold",
        "font-size": "1.3rem"
      }
    },
    "username": {
      "type": "text",
      "label": {
        "en": "Camera username",
        "de": "Kamera Benutzername",
        "ru": "Имя пользователя камеры",
        "pt": "Nome de usuário da câmera",
        "nl": "Camera gebruikersnaam",
        "fr": "Nom d ' utilisateur de la caméra",
        "it": "Nome della macchina",
        "es": "Nombre de usuario de la cámara",
        "pl": "Nazwisko Camera",
        "uk": "Ім'я користувача камери",
        "zh-cn": "Camera用户"
      },
      "newLine": true,
      "sm": 3
    },
    "password": {
      "type": "password",
      "newLine": true,
      "repeat": false,
      "visible": true,
      "sm": 3,
      "label": {
        "en": "Camera password",
        "de": "Kamera Passwort",
        "ru": "Пароль камеры",
        "pt": "Senha da câmera",
        "nl": "Camera wachtwoord",
        "fr": "Mot de passe caméra",
        "it": "Password della macchina",
        "es": "Contraseña de cámara",
        "pl": "Camera password",
        "uk": "Пароль камери",
        "zh-cn": "Camera密码"
      }
    },
    "_discover": {
      "newLine": true,
      "variant": "contained",
      "color": "primary",
      "disabled": "!_alive",
      "type": "sendTo",
      "error": {
        "connect timeout": "Connection timeout"
      },
      "jsonData": "{\"username\":\"${data.username}\",\"password\":\"${data.password}\"}",
      "icon": "search",
      "showProcessing": true,
      "command": "discover",
      "label": "Start Camera Discovery"
    },
    "_manual": {
      "newLine": true,
      "type": "panel",
      "label": "Manual Camera Search",
      "items": {
        "_manualSearchHint": {
          "type": "staticText",
          "newLine": true,
          "sm": 12,
          "text": "If discover does not work, you can try to search for cameras manually.",
          "style": {
            "paddingTop": 50,
            "fontWeight": "bold",
            "font-size": "1.3rem"
          }
        },
        "startIp": {
          "type": "text",
          "sm": 12,
          "md": 6,
          "lg": 4,
          "label": "Start Ip",
          "default": "192.168.178.1"
        },
        "endIp": {
          "type": "text",
          "sm": 12,
          "md": 6,
          "lg": 4,
          "label": "End Ip",
          "default": "192.168.178.255"
        },
        "port": {
          "type": "text",
          "sm": 12,
          "md": 6,
          "lg": 4,
          "label": "Port",
          "default": "80, 7575, 8000, 8080, 8081, 8899"
        },
        "_manualDiscover": {
          "newLine": true,

          "variant": "contained",
          "color": "primary",
          "disabled": "!_alive",
          "type": "sendTo",
          "error": {
            "connect timeout": "Connection timeout"
          },
          "jsonData": "{\"startIp\":\"${data.startIp}\",\"endIp\":\"${data.endIp}\",\"port\":\"${data.port}\",\"username\":\"${data.username}\",\"password\":\"${data.password}\"}",
          "icon": "search",
          "showProcessing": true,
          "command": "manualSearch",
          "label": "Start Camera Search",
          "result": {
            "ok": "See log output for results"
          }
        }
      }
    }
  }
}
